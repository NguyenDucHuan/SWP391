@model DiamondShopBOs.tblSetting
@{
    ViewBag.Title = "Add Setting";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .form-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 30px;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .form-title {
            font-size: 1.5em;
            font-weight: bold;
            margin-bottom: 20px;
            color: #333333;
            text-align: center;
        }

        .form-group label {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .custom-file-label::after {
            content: "Browse";
        }

        .floating-btn {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1000;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-title">Add New Setting</div>
            </div>

            @using (Html.BeginForm("AddSetting", "Manager", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <div class="form-group">
                    @Html.LabelFor(m => m.settingType, "Setting Type")
                    @Html.TextBoxFor(m => m.settingType, new { @class = "form-control", placeholder = "Enter setting type" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.material, "Material")
                    @Html.TextBoxFor(m => m.material, new { @class = "form-control", placeholder = "Enter material" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.priceTax, "Price")
                    @Html.TextBoxFor(m => m.priceTax, new { @class = "form-control", placeholder = "Enter price" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.quantityStones, "Quantity Stones")
                    @Html.TextBoxFor(m => m.quantityStones, new { @class = "form-control", placeholder = "Enter quantity of stones" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.description, "Description")
                    @Html.TextBoxFor(m => m.description, new { @class = "form-control", placeholder = "Enter description" })
                </div>
                <div class="form-group">
                    @Html.Label("Setting Image")
                    <div class="custom-file">
                        <input type="file" name="settingImage" class="custom-file-input" id="settingImage">
                        <label class="custom-file-label" for="settingImage">Choose file</label>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Add Setting</button>
                    <button type="button" class="btn btn-warning" onclick="clearForm()">Clear Form</button>
                </div>
            }
        </div>
        @if ((int)Session["RoleID"] == 3)
        {
            <a href="@Url.Action("Index", "Manager")" class="btn btn-secondary floating-btn">Back to Manage Board</a>
        }
        @if ((int)Session["RoleID"] == 2)
        {
            <a href="@Url.Action("Index", "Manager")" class="btn btn-secondary floating-btn">Back to Admin Board</a>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    <script>
        $(document).ready(function () {
            bsCustomFileInput.init();
        });

        function clearForm() {
            $('input[type="text"], input[type="date"], textarea').val('');
            $('input[type="file"]').val('');
            $('.custom-file-label').text('Choose file');
        }
    </script>
</body>
</html>
