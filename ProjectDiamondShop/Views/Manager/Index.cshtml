                success: function (response) {
                    if (response.success) {
                        $('#user-row-' + userId + ' button').toggleClass('btn-success btn-danger').text(newStatus ? 'Enable' : 'Disable');
                        $('#user-row-' + userId + ' button').attr('onclick', 'toggleStatus("' + userId + '", ' + newStatus + ')');
                    } else {
                        alert(response.message);
                    }
                },
