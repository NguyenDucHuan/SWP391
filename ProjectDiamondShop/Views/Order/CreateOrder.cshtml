@model ProjectDiamondShop.Models.Cart

@{
    ViewBag.Title = "Create Order";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<style>
    h2 {
        margin-top: 50px;
        text-align: center;
    }
</style>

<h2 style="text-align:center;">Create Order</h2>

<div class="container" style="max-width: 400px; margin: 0 auto; border: 1px solid black; padding: 20px;">
    @using (Html.BeginForm("SaveOrder", "Order", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        foreach (var item in Model.Items)
        {
            <div class="form-group">
                <label for="DiamondName">Diamond Name:</label>
                <input type="text" class="form-control" id="DiamondName" value="@item.DiamondName" disabled />
            </div>
            <div class="form-group">
                <label for="DiamondPrice">Diamond Price:</label>
                <input type="text" class="form-control" id="DiamondPrice" value="@item.DiamondPrice" disabled />
            </div>
        }

        <div class="form-group">
            <label for="Address">Address:</label>
            <input type="text" id="Address" name="address" class="form-control" placeholder="Enter Address" required />
        </div>
        <div class="form-group">
            <label for="Phone">Phone:</label>
            <input type="text" id="Phone" name="phone" class="form-control" placeholder="Enter Phone" required />
        </div>
        <div class="form-group">
            <label for="Total">Total:</label>
            <input type="text" class="form-control" id="Total" value="$@Model.Items.Sum(i => i.DiamondPrice)" disabled />
        </div>
        <button type="submit" class="btn btn-primary">Create Order</button>
    }

</div>
