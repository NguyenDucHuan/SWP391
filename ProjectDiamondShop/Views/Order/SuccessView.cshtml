@{
    ViewBag.Title = "SuccessView";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container" style="margin-top:200px; ">
    <div class="row align-items-center">
        <div class="col-md-1"></div>
        <div class="col-md-3">
            <img src="https://cdn.pixabay.com/photo/2017/12/08/23/44/thank-you-3006975_1280.png" alt="Thank You Image" style="max-width: 200px; height: auto;">
        </div>
        <div class="col-md-7">
            <h2>Payment Successful</h2>
            <div class="alert alert-success" role="alert">
                <strong>Congratulations!</strong> Your payment was successful. Please wait for your order to be processed.
            </div>
            <div style="text-align: center;">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
                <a href="@Url.Action("ViewOrders", "Home")" class="btn btn-primary">View Orders</a>
            </div>
        </div>
    </div>
</div>
