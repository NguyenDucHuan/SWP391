@{
    ViewBag.Title = "EnterResetCode";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="~/Content/ForgotPassword.css">


<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xxl-11">
                <div class="card border-light-subtle shadow-sm">
                    <div class="row g-0">
                        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                            <img class="img-fluid rounded-start img-fluid-custom" src="/Image/HomePage/Logo/ResetPassword.png" alt="Welcome back you've been missed!">
                        </div>
                        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                            <div class="col-12 col-lg-11 col-xl-10">
                                <div class="card-body p-3 p-md-4 p-xl-5">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="mb-5">
                                                <h2 class="h4 text-center">Enter Reset Code</h2>
                                                <h3 class="fs-6 fw-normal text-secondary text-center m-0">Provide the reset code sent to your email.</h3>
                                            </div>
                                        </div>
                                    </div>
                                    @using (Html.BeginForm("EnterResetCode", "ForgotPassword", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="row gy-3 overflow-hidden">
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com" value="@ViewBag.Email" readonly />
                                                    <label for="email" class="form-label">Email</label>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input type="text" class="form-control" name="resetCode" id="resetCode" placeholder="Reset Code" required />
                                                    <label for="resetCode" class="form-label">Reset Code</label>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="d-grid">
                                                    <button class="btn btn-dark btn-lg" type="submit">Verify Reset Code</button>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center mt-5">
                                                <a href="@Url.Action("Index", "Account")" class="link-secondary text-decoration-none">Login</a>
                                                <a href="@Url.Action("Index", "Account")" class="link-secondary text-decoration-none">Register</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
