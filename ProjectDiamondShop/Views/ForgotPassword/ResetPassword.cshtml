@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
<style>
    body {
        background-color: #3AAFA9;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .img-fluid-custom {
        max-height: 50%;
        object-fit: contain;
        display: block;
        margin: 0 auto;
    }

    .card {
        margin-top: 100px;
        margin-bottom: 66px;
    }

    .container {
        flex: 1;
    }
</style>
<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xxl-11">
                <div class="card border-light-subtle shadow-sm">
                    <div class="row g-0">
                        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                            <img class="img-fluid rounded-start img-fluid-custom" src="/Image/HomePage/Logo/ResetPassword.png" alt="Welcome back you've been missed!">
                        </div>
                        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                            <div class="col-12 col-lg-11 col-xl-10">
                                <div class="card-body p-3 p-md-4 p-xl-5">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="mb-5">
                                                <h2 class="h4 text-center">Reset Password</h2>
                                                <h3 class="fs-6 fw-normal text-secondary text-center m-0">Enter your new password below.</h3>
                                            </div>
                                        </div>
                                    </div>
                                    @using (Html.BeginForm("ResetPassword", "ForgotPassword", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("code", (string)ViewBag.ResetCode)
                                        @Html.Hidden("email", (string)ViewBag.Email)
                                        <div class="row gy-3 overflow-hidden">
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input type="password" class="form-control" name="newPassword" id="newPassword" placeholder="New Password" required>
                                                    <label for="newPassword" class="form-label">New Password</label>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" required>
                                                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="d-grid">
                                                    <button class="btn btn-dark btn-lg" type="submit">Reset Password</button>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center mt-5">
                                                <a href="@Url.Action("Index", "Login")" class="link-secondary text-decoration-none">Login</a>
                                                <a href="@Url.Action("Index", "SignUp")" class="link-secondary text-decoration-none">Register</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
