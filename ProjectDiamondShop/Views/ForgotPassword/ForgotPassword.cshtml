
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<style>
    .login-container {
        padding: 20px;
        margin-top: 100px;
        max-width: 400px;
        width: 80vw;
        margin-left: auto;
        margin-right: auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        border: 2px solid #ccc;
        box-shadow: 0 8px 16px rgba(0,0,0,0.5);
        border-radius: 10px;
        background-color: skyblue;
        color: #333;
    }

    .form-control {
        width: 100%;
    }

    .center-text {
        text-align: center;
        margin-top: -12px;
    }
</style>
<div class="login-container">
    <h2 class="center-text">Forgot Password</h2>
    <p class="center-text text-danger">@ViewBag.Message</p>
    @using (Html.BeginForm("SendResetCode", "ForgotPassword", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" name="email" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Send Reset Code</button>
    }
</div>

