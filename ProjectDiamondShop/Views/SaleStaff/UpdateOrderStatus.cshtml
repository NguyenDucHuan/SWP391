@model ProjectDiamondShop.Models.Order

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>Update Order Status</title>
    <link rel="stylesheet" href="/Content/bootstrap.min.css" />
    <style>
        .container {
            margin-top: 20px;
        }

        .status-progress {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

            .status-progress div {
                text-align: center;
                position: relative;
            }

                .status-progress div span {
                    display: block;
                }

            .status-progress .circle {
                width: 30px;
                height: 30px;
                background-color: lightgray;
                border-radius: 50%;
                margin: auto;
            }

            .status-progress .completed {
                background-color: green;
            }

            .status-progress .line {
                flex-grow: 1;
                height: 5px;
                background-color: lightgray;
                margin: 0 10px;
            }

            .status-progress .completed-line {
                background-color: green;
            }

        .timeline {
            list-style-type: none;
            position: relative;
        }

            .timeline:before {
                content: '';
                background: #d4d9df;
                display: inline-block;
                position: absolute;
                left: 29px;
                width: 2px;
                height: 100%;
                z-index: 400;
            }

            .timeline > li {
                margin: 20px 0;
                padding-left: 40px;
            }

                .timeline > li:before {
                    content: '';
                    background: white;
                    border: 3px solid #22c0e8;
                    display: inline-block;
                    position: absolute;
                    border-radius: 50%;
                    left: 20px;
                    width: 20px;
                    height: 20px;
                    z-index: 400;
                }
    </style>
</head>
<body>
    <div class="container">
        <h2>Update Order Status</h2>
        <div class="status-progress">
            <div>
                <div class="circle @(Model.Status == "Order Placed" || Model.Status == "Paid" || Model.Status == "Shipped to Carrier" || Model.Status == "In Delivery" || Model.Status == "Delivered" ? "completed" : "")"></div>
                <span>Order Placed</span>
            </div>
            <div class="line @(Model.Status == "Paid" || Model.Status == "Shipped to Carrier" || Model.Status == "In Delivery" || Model.Status == "Delivered" ? "completed-line" : "")"></div>
            <div>
                <div class="circle @(Model.Status == "Paid" || Model.Status == "Shipped to Carrier" || Model.Status == "In Delivery" || Model.Status == "Delivered" ? "completed" : "")"></div>
                <span>Paid</span>
            </div>
            <div class="line @(Model.Status == "Shipped to Carrier" || Model.Status == "In Delivery" || Model.Status == "Delivered" ? "completed-line" : "")"></div>
            <div>
                <div class="circle @(Model.Status == "Shipped to Carrier" || Model.Status == "In Delivery" || Model.Status == "Delivered" ? "completed" : "")"></div>
                <span>Shipped to Carrier</span>
            </div>
            <div class="line @(Model.Status == "In Delivery" || Model.Status == "Delivered" ? "completed-line" : "")"></div>
            <div>
                <div class="circle @(Model.Status == "In Delivery" || Model.Status == "Delivered" ? "completed" : "")"></div>
                <span>In Delivery</span>
            </div>
            <div class="line @(Model.Status == "Delivered" ? "completed-line" : "")"></div>
            <div>
                <div class="circle @(Model.Status == "Delivered" ? "completed" : "")"></div>
                <span>Delivered</span>
            </div>
        </div>
        <form action="@Url.Action("UpdateStatus", "SaleStaff")" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="orderId" value="@Model.OrderID" />
            <div class="form-group">
                <label for="status">Update Status</label>
                <select class="form-control" id="status" name="status">
                    @{
                        var roleId = (int)Session["RoleID"];
                        if (roleId == 4)
                        {
                            <option value="Shipped to Carrier">Shipped to Carrier</option>
                            <option value="In Delivery">In Delivery</option>
                            <option value="Delivered">Delivered</option>
                        }
                        else if (roleId == 5)
                        {
                            <option value="Order Placed">Order Placed</option>
                            <option value="Paid">Paid</option>
                        }
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Update Status</button>
        </form>
        <br />
        <ul class="timeline">
            @if (ViewBag.StatusUpdates != null)
            {
                foreach (var update in ViewBag.StatusUpdates)
                {
                    <li>
                        <p><strong>@update.Key:</strong> @update.Value.ToString("yyyy-MM-dd HH:mm:ss")</p>
                    </li>
                }
            }
        </ul>
        <br />
        <a href="@Url.Action((int)Session["RoleID"] == 4 ? "Index" : "ViewOrder", (int)Session["RoleID"] == 4 ? "DeliveryStaff" : "SaleStaff")" class="btn btn-secondary">
            @if ((int)Session["RoleID"] == 4)
            {
                <span>Back to Delivery Staff</span>
            }
            else if ((int)Session["RoleID"] == 5)
            {
                <span>Back to View Order</span>
            }
        </a>


    </div>
</body>
</html>
