@model IEnumerable<ProjectDiamondShop.Models.Order>

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>Sale Staff Orders</title>
    <link rel="stylesheet" href="/Content/bootstrap.min.css" />
    <style>
        .container {
            margin-top: 50px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            border: 1px solid black;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Sale Staff Orders</h2>
        <table>
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer ID</th>
                    <th>Delivery Staff ID</th>
                    <th>Total Money</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderID</td>
                        <td>@order.CustomerID</td>
                        <td>@order.DeliveryStaffID</td>
                        <td>@order.TotalMoney</td>
                        <td>@order.Status</td>
                        <td>
                            <form action="@Url.Action("Process", "SaleStaff")" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="orderId" value="@order.OrderID" />
                                <button type="submit" class="btn btn-warning">Process</button>
                            </form>
                            <a href="@Url.Action("ViewOrder", "SaleStaff", new { orderId = order.OrderID })" class="btn btn-info">View Order</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
        <a href="@Url.Action("Index", "Login")" class="btn btn-secondary">Back to Login</a>
    </div>
</body>
</html>
