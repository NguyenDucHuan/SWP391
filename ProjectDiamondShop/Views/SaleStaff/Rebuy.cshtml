@model DiamondShopBOs.tblDiamond

@{
    ViewBag.Title = "Rebuy";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" />
    <link rel="icon" type="image/png" href="~/Content/Icons/diamond (1).png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        body {
            background-color: #EAE7D6;
            color: #333;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 20px;
            border-radius: 30px;
            background-color: #FFFFFF;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            background-color: #D7F9FA;
            padding: 20px;
            border-radius: 10px;
        }

            .header h2 {
                color: #5D7B6F;
                margin: 0;
                display: flex;
                align-items: center;
            }

                .header h2 .fa-chart-line {
                    margin-right: 10px;
                }

        .logout-button {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            margin-left: 20px;
        }

            .logout-button:hover {
                background-color: #c82333;
            }

        .search-container {
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            width: 100%;
        }

        .search-icon {
            background-color: #A4C3A2;
            border: none;
            padding: 10px;
            border-radius: 5px 0 0 5px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .search-input {
            border-radius: 0 5px 5px 0;
            flex: 1;
            padding: 7px;
        }

        .diamond-info {
            background-color: #FFFFFF;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-auto-rows: minmax(50px, auto);
            border: 1px solid #ddd;
            border-radius: 10px;
        }

            .diamond-info div {
                display: flex;
                align-items: center;
                justify-content: center;
                font-weight: bold;
                border: 1px solid #ddd;
                padding: 10px;
            }

        .rebuy-container {
            background-color: #FFFFFF;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            display: flex;
            justify-content: space-between;
        }

        .form-check {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
            width: 30%;
        }

        .form-check-input {
            margin-right: 10px;
        }

        .form-group {
            display: flex;
            align-items: center;
            width: 30%;
            margin-bottom: 10px;
        }

            .form-group label {
                margin-bottom: 5px;
                font-weight: bold;
                width: 150px;
            }

            .form-group input {
                width: 100%;
            }

        .btn-primary {
            background-color: #007bff;
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            border-radius: 12px;
            cursor: pointer;
            align-self: flex-end;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .back-button {
            color: #A4C3A2;
            border: none;
            padding: 10px 20px;
            margin-bottom: 10px;
            font-size: 24px;
            transition: transform 0.2s;
        }

            .back-button:hover {
                color: #8DA78F;
                transform: scale(1.2);
            }

        .header-actions {
            display: flex;
            align-items: center;
        }

        .top-right-buttons {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            margin-bottom: 10px;
        }

        .rebuy-form {
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 100%;
        }

            .rebuy-form .form-group {
                margin-left: 20px;
                margin-right: 20px;
            }

        .date-info {
            margin-top: 20px;
            font-weight: bold;
        }

        .time-difference {
            margin-top: 10px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="top-right-buttons">
        <a href="@Url.Action("Index", "SaleStaff")" class="back-button"><i class="fas fa-arrow-right"></i></a>
    </div>
    <div class="container">
        <div class="header">
            <div class="header-actions">
                <h2><i class="fa fa-chart-line"></i> Rebuy Diamond</h2>
            </div>
            <form action="@Url.Action("Logout", "Account")" method="post" style="margin: 0;">
                <button type="submit" class="logout-button">Logout</button>
            </form>
        </div>
        <div class="search-container">
            <button class="search-icon" onclick="toggleSearchForm()"><i class="fa fa-search"></i></button>
            <input type="text" id="searchTerm" class="form-control search-input" placeholder="Search by ItemID or WarrantyCode" onkeypress="checkEnter(event)" value="@Request.QueryString["searchTerm"]">
        </div>
        @if (Model != null)
        {
            <div class="diamond-info">
                <div>Diamond ID: @Model.diamondID</div>
                <div>Diamond Name: @Model.diamondName</div>
                <div>Diamond Price: $@String.Format("{0:N0}", Model.diamondPrice)</div>
                <div>Diamond Description: @Model.diamondDescription</div>
                <div>Carat Weight: @Model.caratWeight</div>
                <div>Clarity ID: @Model.clarityID</div>
                <div>Cut ID: @Model.cutID</div>
                <div>Color ID: @Model.colorID</div>
                <div>Shape ID: @Model.shapeID</div>
            </div>
            <div class="rebuy-container">
                <form action="@Url.Action("SubmitRebuyRequest", "SaleStaff")" method="post" class="rebuy-form">
                    <input type="hidden" name="diamondID" value="@Model.diamondID" />
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="stillHaveCertification" name="stillHaveCertification" value="true" />
                        <label class="form-check-label" for="stillHaveCertification">Still Have Certification</label>
                    </div>
                    <div class="form-group">
                        <label for="rebuyPrice">Rebuy Price</label>
                        <input type="text" class="form-control" id="rebuyPrice" name="rebuyPrice" readonly />
                    </div>
                    <div>
                        <button type="button" class="btn btn-primary" onclick="calculateRebuyPrice()">Calculate Rebuy Price</button>
                        <button type="submit" class="btn btn-primary">Submit Rebuy Request</button>
                    </div>
                </form>
            </div>
            <div class="date-info" id="dateInfo"></div>
            <div class="time-difference" id="timeDifferenceInfo"></div>
        }
        else if (ViewBag.Message != null)
        {
            <div class="alert alert-warning" style="color: red;">@ViewBag.Message</div>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
    <script>
        function toggleSearchForm() {
            var searchInput = document.getElementById("searchTerm");
            if (searchInput.style.display === "none" || searchInput.style.display === '') {
                searchInput.style.display = "block";
            } else {
                searchInput.style.display = "none";
            }
        }

        function checkEnter(event) {
            if (event.key === "Enter") {
                event.preventDefault();
                searchRebuy();
            }
        }

        function searchRebuy() {
            var searchTerm = $('#searchTerm').val();
            window.location.href = '@Url.Action("SearchRebuy", "SaleStaff")' + '?searchTerm=' + searchTerm;
        }

        function calculateRebuyPrice() {
            var diamondID = $('input[name="diamondID"]').val();
            var stillHaveCertification = $('#stillHaveCertification').is(':checked');

            $.post('@Url.Action("CalculateRebuyPrice", "SaleStaff")', {
                diamondID: diamondID,
                stillHaveCertification: stillHaveCertification
            }, function(data) {
                $('#rebuyPrice').val(data.rebuyPrice);
                $('#dateInfo').text('Sale Date: ' + data.saleDate);
                $('#timeDifferenceInfo').text('Time Difference: ' + data.timeDifference + ' days');
            });
        }
    </script>
</body>
</html>
