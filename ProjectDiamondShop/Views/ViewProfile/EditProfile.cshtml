@model DiamondShopBOs.tblUser

@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<style>
    .edit-profile-container {
        padding: 20px;
        margin-top: 100px;
        max-width: 400px;
        width: 80vw;
        margin-left: auto;
        margin-right: auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        border: 2px solid #ccc;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5);
        border-radius: 10px;
        background-color: skyblue;
        color: #333;
        position: relative;
        z-index: 1;
    }

    .col-xs-11 {
        display: block;
        margin: 0 auto;
        max-width: 300px;
    }

    .form-control {
        width: 100%;
    }

    .btn-edit-profile-spacing {
        margin-top: 10px;
    }

    .center-text {
        text-align: center;
        margin-top: -12px;
    }

    .change-button {
        margin-left: 10px;
        cursor: pointer;
        color: blue;
        text-decoration: underline;
    }

    .spacer {
        height: 120px;
    }
</style>
<div style="margin-top">
    <form id="form1" runat="server" method="post" action="@Url.Action("EditProfile", "ViewProfile")">
        @Html.AntiForgeryToken()

        <div class="edit-profile-container">
            <h2 class="center-text">Edit Profile</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label for="UserID">User ID</label>
                <input type="text" id="UserID" class="form-control" value="@ViewBag.OriginalUserID" readonly />
            </div>
            <div class="form-group">
                <label for="UserName">User Name</label>
                <input type="text" id="UserName" class="form-control" value="@ViewBag.UserName" readonly />
            </div>
            <div class="form-group">
                <label for="FullName">Full Name</label>
                @Html.TextBoxFor(m => m.fullName, new { @class = "form-control", @readonly = "readonly", @id = "FullName" })
                <span class="change-button" data-target="#FullName">Change</span>
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                @Html.TextBoxFor(m => m.email, new { @class = "form-control", @type = "email", @readonly = "readonly", @id = "Email" })
                <span class="change-button" data-target="#Email">Change</span>
            </div>
            <div class="form-group">
                <label for="OldPassword">Old Password</label>
                <input type="password" id="OldPassword" name="oldPassword" class="form-control" />
                @Html.ValidationMessage("OldPassword", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="NewPassword">New Password</label>
                <input type="password" id="NewPassword" name="newPassword" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Update Profile" class="btn btn-primary btn-edit-profile-spacing" />
            </div>
        </div>
        <!-- Success Modal -->
        <div class="modal fade" id="updateSuccessModal" tabindex="-1" role="dialog" aria-labelledby="updateSuccessModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="updateSuccessModalLabel">Profile Update Success</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Your profile has been updated successfully!</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="modalOkButton">OK</button>
                    </div>
                </div>
            </div>
        </div>
        <script>
 $(document).ready(function() {
     // Enable editing on change button click
     $('.change-button').click(function() {
         var target = $(this).data('target');
         $(target).prop('readonly', false);
     });

     var successMessage = '@ViewBag.SuccessMessage';
     var userName = '@ViewBag.UserName';
     if (successMessage) {
         $('#updateSuccessModal').modal('show');
         $('#modalOkButton').click(function() {
             window.location.href = '@Url.Action("Index", "Home")';
         });
     }
 });
        </script>
    </form>
</div>