@model DiamondShopBOs.tblDiamond
@{
    ViewBag.Title = "Add Diamond";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="~/Content/Icons/diamond (1).png" />
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: radial-gradient(circle at 10% 20%, rgba(255, 255, 255, 0.1) 0%, rgba(0, 0, 0, 0.7) 100%);
        }

        .form-container {
            padding: 40px;
            max-width: 600px;
            width: 100%;
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .form-container h2 {
                margin-bottom: 25px;
                font-weight: bold;
                color: #333;
                text-align: center;
            }

            .form-container .form-label {
                font-weight: bold;
                color: #555;
            }

            .form-container .form-control, .form-container .form-select, .form-container .custom-file-input {
                border-radius: 10px;
                border: 1px solid #ddd;
                margin-bottom: 15px;
                padding: 10px;
                font-size: 14px;
                width: 100%;
            }

            .form-container .custom-file-label {
                border-radius: 10px;
                padding: 10px;
            }

            .form-container .btn-container {
                display: flex;
                justify-content: space-between;
                margin-top: 20px;
            }

            .form-container .btn-primary {
                border-radius: 10px;
                font-weight: bold;
                padding: 5px 10px;
                font-size: 14px;
                background-color: #007bff;
                border-color: #007bff;
                color: white;
            }

            .form-container .btn-warning {
                border-radius: 10px;
                font-weight: bold;
                padding: 5px 10px;
                font-size: 14px;
                background-color: #6c757d;
                border-color: #6c757d;
                color: white;
            }

        .back-to-admin {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 20px;
        }

            .back-to-admin i {
                margin-right: 5px;
            }

            .back-to-admin a {
                color: #007bff;
                text-decoration: none;
            }

                .back-to-admin a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h2>Add New Diamond</h2>

            @using (Html.BeginForm("AddDiamond", "Diamonds", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <div class="mb-3">
                    @Html.LabelFor(m => m.diamondName, "Diamond Name", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.diamondName, new { @class = "form-control", placeholder = "Enter diamond name" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.diamondPrice, "Diamond Price", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.diamondPrice, new { @class = "form-control", placeholder = "Enter diamond price" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.diamondDescription, "Description", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.diamondDescription, new { @class = "form-control", placeholder = "Enter description" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.caratWeight, "Carat Weight", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.caratWeight, new { @class = "form-control", placeholder = "Enter carat weight" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.clarityID, "Clarity", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.clarityID, new { @class = "form-control", placeholder = "Enter clarity" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.cutID, "Cut", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.cutID, new { @class = "form-control", placeholder = "Enter cut" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.colorID, "Color", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.colorID, new { @class = "form-control", placeholder = "Enter color" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.shapeID, "Shape", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.shapeID, new { @class = "form-control", placeholder = "Enter shape" })
                </div>
                <div class="mb-3">
                    @Html.Label("Diamond Image A (Actual)", new { @class = "form-label" })
                    <div class="custom-file">
                        <input type="file" name="diamondImageA" class="custom-file-input" id="diamondImageA">
                    </div>
                </div>
                <div class="mb-3">
                    @Html.Label("Diamond Image B (Dimensions)", new { @class = "form-label" })
                    <div class="custom-file">
                        <input type="file" name="diamondImageB" class="custom-file-input" id="diamondImageB">
                    </div>
                </div>
                <div class="mb-3">
                    @Html.Label("Diamond Image C (Height)", new { @class = "form-label" })
                    <div class="custom-file">
                        <input type="file" name="diamondImageC" class="custom-file-input" id="diamondImageC">
                    </div>
                </div>
                <div class="mb-3">
                    @Html.Label("Certificate Image", new { @class = "form-label" })
                    <div class="custom-file">
                        <input type="file" name="certificateImage" class="custom-file-input" id="certificateImage">
                    </div>
                </div>
                <div class="mb-3">
                    @Html.Label("Certificate Number", new { @class = "form-label" })
                    <input type="text" name="certificateNumber" class="form-control" placeholder="Enter certificate number" />
                </div>
                <div class="mb-3">
                    @Html.Label("Issue Date", new { @class = "form-label" })
                    <input type="date" name="issueDate" class="form-control" />
                </div>
                <div class="mb-3">
                    @Html.Label("Certifying Authority", new { @class = "form-label" })
                    <input type="text" name="certifyingAuthority" class="form-control" placeholder="Enter certifying authority" />
                </div>
                <div class="btn-container">
                    <button type="submit" class="btn btn-primary">Add Diamond</button>
                    <button type="button" class="btn btn-warning" onclick="clearForm()">Clear Form</button>
                </div>
            }

            <div class="back-to-admin mt-4">
                <i class="fas fa-arrow-left"></i>
                <a href="@Url.Action("Index", "Manager")">Back to Admin Board</a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    <script>
        $(document).ready(function () {
            bsCustomFileInput.init();
        });

        function clearForm() {
            $('input[type="text"], input[type="date"], textarea').val('');
            $('input[type="file"]').val('');
            $('.custom-file-label').text('Choose file');
        }
    </script>
</body>
</html>
