@model DiamondShopBOs.tblDiamond
@{
    ViewBag.Title = "AddDiamond";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/Diamonds/AddDiamond.css">
</head>
<body>
    <div class="container">
        <div class="form-container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-title">Add New Diamond</div>
            </div>

            @using (Html.BeginForm("AddDiamond", "Diamonds", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <div class="form-group">
                    @Html.LabelFor(m => m.diamondName, "Diamond Name")
                    @Html.TextBoxFor(m => m.diamondName, new { @class = "form-control", placeholder = "Enter diamond name" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.diamondPrice, "Diamond Price")
                    @Html.TextBoxFor(m => m.diamondPrice, new { @class = "form-control", placeholder = "Enter diamond price" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.diamondDescription, "Description")
                    @Html.TextBoxFor(m => m.diamondDescription, new { @class = "form-control", placeholder = "Enter description" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.caratWeight, "Carat Weight")
                    @Html.TextBoxFor(m => m.caratWeight, new { @class = "form-control", placeholder = "Enter carat weight" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.clarityID, "Clarity")
                    @Html.TextBoxFor(m => m.clarityID, new { @class = "form-control", placeholder = "Enter clarity" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.cutID, "Cut")
                    @Html.TextBoxFor(m => m.cutID, new { @class = "form-control", placeholder = "Enter cut" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.colorID, "Color")
                    @Html.TextBoxFor(m => m.colorID, new { @class = "form-control", placeholder = "Enter color" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.shapeID, "Shape")
                    @Html.TextBoxFor(m => m.shapeID, new { @class = "form-control", placeholder = "Enter shape" })
                </div>
                <div class="form-group">
                    @Html.Label("Diamond Image A (Actual)")
                    <div class="custom-file">
                        <input type="file" name="diamondImageA" class="custom-file-input" id="diamondImageA">
                        <label class="custom-file-label" for="diamondImageA">Choose file</label>
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Diamond Image B (Dimensions)")
                    <div class="custom-file">
                        <input type="file" name="diamondImageB" class="custom-file-input" id="diamondImageB">
                        <label class="custom-file-label" for="diamondImageB">Choose file</label>
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Diamond Image C (Height)")
                    <div class="custom-file">
                        <input type="file" name="diamondImageC" class="custom-file-input" id="diamondImageC">
                        <label class="custom-file-label" for="diamondImageC">Choose file</label>
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Certificate Image")
                    <div class="custom-file">
                        <input type="file" name="certificateImage" class="custom-file-input" id="certificateImage">
                        <label class="custom-file-label" for="certificateImage">Choose file</label>
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Certificate Number")
                    <input type="text" name="certificateNumber" class="form-control" placeholder="Enter certificate number" />
                </div>
                <div class="form-group">
                    @Html.Label("Issue Date")
                    <input type="date" name="issueDate" class="form-control" />
                </div>
                <div class="form-group">
                    @Html.Label("Certifying Authority")
                    <input type="text" name="certifyingAuthority" class="form-control" placeholder="Enter certifying authority" />
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Add Diamond</button>
                    <button type="button" class="btn btn-warning" onclick="clearForm()">Clear Form</button>
                </div>
            }
        </div>
        @if ((int)Session["RoleID"] == 3)
        {
            <a href="@Url.Action("Index", "Manager")" class="btn btn-secondary floating-btn">Back to Manage Board</a>
        }
        @if ((int)Session["RoleID"] == 2)
        {
            <a href="@Url.Action("Index", "Manager")" class="btn btn-secondary floating-btn">Back to Admin Board</a>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    <script>
        $(document).ready(function () {
            bsCustomFileInput.init();
        });

        function clearForm() {
            $('input[type="text"], input[type="date"], textarea').val('');
            $('input[type="file"]').val('');
            $('.custom-file-label').text('Choose file');
        }
    </script>
</body>
</html>
