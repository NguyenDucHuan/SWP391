@model List<DiamondShopBOs.tblWarranty>

@{
    ViewBag.Title = "Customer Warranties";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Customer Warranties</h2>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">HomePage</a>
        @if (Model == null || !Model.Any())
        {
            <p>No warranties found.</p>
        }
        else
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Item ID</th>
                        <th>Warranty Start Date</th>
                        <th>Warranty End Date</th>
                        <th>Warranty Details</th>
                        <th>Warranty Code</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var warranty in Model)
                    {
                        <tr>
                            <td>@warranty.orderID</td>
                            <td>@warranty.ItemID</td>
                            <td>@warranty.warrantyStartDate</td>
                            <td>@warranty.warrantyEndDate</td>
                            <td>@warranty.warrantyDetails</td>
                            <td>@warranty.warrantyCode</td>
                            <td>@warranty.status</td>
                            <td>
                                <a href="@Url.Action("ViewWarrantyDetail", "Warranty", new { warrantyID = warranty.warrantyID })" class="btn btn-primary">View Warranty</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</body>
</html>
